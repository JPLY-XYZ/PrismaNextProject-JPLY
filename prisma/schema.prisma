generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Grupo {
  id     Int    @id @default(autoincrement())
  nombre String
  tutor  String
  aula   String

  @@map("grupos")
}

model Alumno {
  id              Int      @id @default(autoincrement())
  nombre          String
  fechaNacimiento DateTime
  foto            String?
  tutorLegal      String   @default("Desconocido")
  grupoId         Int

   @@map("estudiantes")
}

model Asignatura {
  id       Int     @id @default(autoincrement())
  nombre   String
  profesor String
  horas    Int

   @@map("asignaturas")
}
